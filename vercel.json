{
  "version": 2,
  "builds": [
    {
      "src": "db.json",
      "use": "vercel-json-server"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/frontend"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/db.json"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "functions": {
    "db.json": {
      "runtime": "nodejs18.x"
    }
  }
}
